# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 1000000
stop_time =  5.0

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic = 1       0
geometry.coord_sys   = 0                  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     = 0      0.0
geometry.prob_hi     = 2.5e8  4.0e8
amr.n_cell           = 320    512

# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
furnace.lo_bc       =  0   1
furnace.hi_bc       =  0   2

furnace.yl_ext_bc_type = 1
furnace.hse_interp_temp = 1
furnace.hse_reflect_vels = 1

# WHICH PHYSICS
furnace.do_hydro = 1
furnace.do_react = 0
furnace.add_ext_src   = 1
furnace.do_grav = 1
furnace.do_sponge = 1

furnace.ppm_type = 1
furnace.riemann_solver = 0

furnace.use_flattening = 1

furnace.small_temp = 5.e6

gravity.gravity_type = ConstantGrav
gravity.const_grav   = -1.5e10

# TIME STEP CONTROL
furnace.cfl            = 0.5     # cfl number for hyperbolic system
furnace.init_shrink    = 0.1     # scale back initial timestep
furnace.change_max     = 1.1     # max time step growth


# DIAGNOSTICS & VERBOSITY
furnace.sum_interval   = 1       # timesteps between computing mass
furnace.v              = 1       # verbosity in Furnace.cpp
amr.v                 = 1       # verbosity in Amr.cpp

# REFINEMENT / REGRIDDING
amr.max_level       = 4       # maximum level number allowed
amr.ref_ratio       = 2 2 2 2 # refinement ratio
amr.regrid_int      = 2 2 2 2 # how often to regrid
amr.blocking_factor = 8       # block factor in grid generation
amr.max_grid_size   = 64
amr.n_error_buf     = 2 2 2 2 # number of buffer cells in error est

# CHECKPOINT FILES
amr.check_file      = chk        # root name of checkpoint file
amr.check_int       = 1000       # number of timesteps between checkpoints

# PLOTFILES
amr.plot_file        = plt        # root name of plotfile
amr.plot_int         = 100        # number of timesteps between plotfiles
amr.derive_plot_vars = ALL

# PROBLEM PARAMETERS
problem.model_name =  "model.hse"

problem.apply_vel_field = 1
problem.velpert_height_loc = 1.2e8
problem.velpert_scale = 5.e6
problem.velpert_amplitude = 1.e5
problem.num_vortices = 2

# EOS
eos.use_eos_coulomb = 0
