# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 990000
stop_time =  3.0

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic = 0       0
geometry.coord_sys   = 1                  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     = 0       0
geometry.prob_hi     = 40960    2.048e4
amr.n_cell           = 128         64

# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
furnace.lo_bc       =  3   1
furnace.hi_bc       =  2   2

furnace.yl_ext_bc_type = 1
furnace.hse_interp_temp = 1
furnace.hse_reflect_vels = 1

# WHICH PHYSICS
furnace.do_hydro = 1
furnace.do_react = 1
furnace.do_rotation = 1
furnace.do_grav = 1
furnace.do_sponge = 1

furnace.small_temp = 1.e6
furnace.small_dens = 1.e-5

furnace.ppm_type = 1
furnace.grav_source_type = 2

gravity.gravity_type = ConstantGrav
gravity.const_grav   = -1.5e14

furnace.rotational_period = 0.0005
furnace.rotation_include_centrifugal = 0

furnace.diffuse_temp = 1
furnace.diffuse_cutoff_density = 5.e4
furnace.diffuse_cond_scale_fac = 10.0

furnace.react_rho_min = 1.e2
furnace.react_rho_max = 5.e7

furnace.react_T_min = 6.e7

furnace.sponge_upper_density = 1.e2
furnace.sponge_lower_density = 1.e0
furnace.sponge_timescale     = 1.e-7

# TIME STEP CONTROL
furnace.cfl            = 0.6     # cfl number for hyperbolic system
furnace.init_shrink    = 0.01     # scale back initial timestep
furnace.change_max     = 1.1     # max time step growth

furnace.use_retry      = 1
furnace.max_subcycles = 128

# DIAGNOSTICS & VERBOSITY
furnace.sum_interval   = 0       # timesteps between computing mass
furnace.v              = 1       # verbosity in Furnace.cpp
amr.v                 = 1       # verbosity in Amr.cpp

# REFINEMENT / REGRIDDING
amr.max_level       = 2       # maximum level number allowed
amr.ref_ratio       = 4 4 2 2 # refinement ratio
amr.regrid_int      = 2 2 2 2 # how often to regrid
amr.blocking_factor = 16       # block factor in grid generation
amr.max_grid_size   = 128
amr.n_error_buf     = 2 2 2 2 # number of buffer cells in error est

# CHECKPOINT FILES
amr.check_file      = chk        # root name of checkpoint file
amr.check_int       = 200        # number of timesteps between checkpoints

# PLOTFILES
amr.plot_file        = plt        # root name of plotfile
amr.plot_per         = 5.e-5      # number of seconds between plotfiles
amr.derive_plot_vars = ALL

#PROBIN FILENAME
amr.probin_file = probin.boost.aprox13
