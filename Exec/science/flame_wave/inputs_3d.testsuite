# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 25
stop_time =  3.0

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic = 0       0       0
geometry.coord_sys   = 0                  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     = 0       0       0
geometry.prob_hi     = 4.096e4    4.096e4    2.048e4
amr.n_cell           = 128        128        64

# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
furnace.lo_bc       =  3   3   1
furnace.hi_bc       =  2   2   2

furnace.zl_ext_bc_type = 1
furnace.hse_interp_temp = 1
furnace.hse_reflect_vels = 1

furnace.fill_ambient_bc = 1
furnace.ambient_fill_dir = 2
furnace.ambient_outflow_vel = 1

# WHICH PHYSICS
furnace.do_hydro = 1
furnace.do_react = 1
furnace.do_rotation = 1
furnace.do_grav = 1
furnace.do_sponge = 1

furnace.small_temp = 1.e6
furnace.small_dens = 1.e-5

furnace.ppm_type = 1
furnace.grav_source_type = 2

gravity.gravity_type = ConstantGrav
gravity.const_grav   = -1.5e14

furnace.rotational_period = 0.001
furnace.rotation_include_centrifugal = 0

furnace.diffuse_temp = 1
furnace.diffuse_cutoff_density = 5.e4
furnace.diffuse_cond_scale_fac = 10.0

furnace.react_rho_min = 1.e2
furnace.react_rho_max = 5.e7

furnace.react_T_min = 6.e7

furnace.sponge_upper_density = 1.e2
furnace.sponge_lower_density = 1.e0
furnace.sponge_timescale     = 1.e-7

# TIME STEP CONTROL
furnace.cfl            = 0.8     # cfl number for hyperbolic system
furnace.init_shrink    = 0.1     # scale back initial timestep
furnace.change_max     = 1.1     # max time step growth

furnace.use_retry      = 1

# DIAGNOSTICS & VERBOSITY
furnace.sum_interval   = 0       # timesteps between computing mass
furnace.v              = 1       # verbosity in Furnace.cpp
amr.v                 = 1       # verbosity in Amr.cpp

# REFINEMENT / REGRIDDING
amr.max_level       = 1       # maximum level number allowed
amr.ref_ratio       = 4 4 2 2 # refinement ratio
amr.regrid_int      = 2 2 2 2 # how often to regrid
amr.blocking_factor = 32       # block factor in grid generation
amr.max_grid_size   = 64
amr.n_error_buf     = 2 2 2 2 # number of buffer cells in error est

# CHECKPOINT FILES
amr.check_file      = chk        # root name of checkpoint file
amr.check_int       = 50         # number of timesteps between checkpoints

# PLOTFILES
amr.plot_file        = plt        # root name of plotfile
amr.plot_per         = 5.e-7      # number of timesteps between plotfiles
amr.derive_plot_vars = ALL


# problem initialization

problem.dtemp = 1.2e9
problem.x_half_max = 2.048e4
problem.x_half_width = 2048.e0

problem.dx_model = 20.e0

problem.dens_base = 3.43e6

problem.T_star = 1.e8
problem.T_hi = 2.e8
problem.T_lo   = 8.e6

problem.H_star = 2000.e0
problem.atm_delta  = 50.0

problem.fuel1_name = "helium-4"
problem.fuel1_frac = 1.0e0

problem.ash1_name  = "nickel-56"
problem.ash1_frac = 1.0e0

problem.low_density_cutoff = 1.e-4

problem.cutoff_density = 2.5e4
problem.max_hse_tagging_level = 3
problem.max_base_tagging_level = 2

problem.X_min = 1.e-2

problem.x_refine_distance = 6.144e4

# Microphysics

integrator.rtol_spec = 1.e-6
integrator.atol_spec = 1.e-6

integrator.react_boost = 10.0

network.use_tables = 1
